{
  "name": "$$MODULE_NAME$$",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode=development",
    "pwd": "dotenv -- echo $HOST",
    "doDeploy": "dotenv docker cp package.tgz ${JAHIA_DOCKER_NAME}:/var/jahia/modules",
    "deploy": "dotenv yarn doDeploy",
    "watch": "yarn build --env deploy=true --watch",
    "doRemoteDeploy": "curl -s --user ${JAHIA_USER} --form bundle=@./package.tgz --form start=true ${JAHIA_HOST}/modules/api/bundles",
    "remoteDeploy": "dotenv yarn doRemoteDeploy",
    "remoteWatch": "yarn build --env remoteDeploy=true --watch"
  },
  "jahia": {
    "module-type": "templatesSet",
    "server": "dist/main.js"
  },
  "devDependencies": {
    "dotenv-cli": "^7.2.1",
    "extra-watch-webpack-plugin": "^1.0.3",
    "handlebars-loader": "^1.7.3",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-shell-plugin-next": "^2.3.1"
  },
  "dependencies": {
    "handlebars": "^4.7.6"
  },
  "engines": {
    "node": ">=12.0.0",
    "yarn" : ">=3.0.0"
  }
}
